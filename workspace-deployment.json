{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaces_appmonitoring_workspace_name": {
            "defaultValue": "appmonitoring-workspace",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.operationalinsights/workspaces",
            "apiVersion": "2021-12-01-preview",
            "name": "[parameters('workspaces_appmonitoring_workspace_name')]",
            "location": "eastus",
            "properties": {
                "sku": {
                    "name": "pergb2018"
                },
                "retentionInDays": 30,
                "features": {
                    "enableLogAccessUsingOnlyResourcePermissions": true
                },
                "workspaceCapping": {
                    "dailyQuotaGb": -1
                },
                "publicNetworkAccessForIngestion": "Enabled",
                "publicNetworkAccessForQuery": "Enabled"
            }
        }
    ],
    "outputs": {
        "thing": {
            "type": "object",
            "value": "[reference(resourceId('microsoft.operationalinsights/workspaces', parameters('workspaces_appmonitoring_workspace_name') ) )]"
        }
    }
}